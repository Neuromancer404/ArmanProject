<Window x:Class="ArmanProject.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArmanProject"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="575">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="332*"/>
            <ColumnDefinition Width="237*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Путь к файлу:" HorizontalAlignment="Left" Margin="15,5,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="20" Margin="98,10,0,0" TextWrapping="Wrap" Name="pathToFile" VerticalAlignment="Top" Width="350" Grid.ColumnSpan="2"/>
        <Button Content="Просмотр" Name="selectFilePath" HorizontalAlignment="Left" Margin="134,10,0,0" Height="20" VerticalAlignment="Top" Width="93" Click="selectFilePath_Click" Grid.Column="1"/>
        <Button Content="Применить" Name="useDirectory" HorizontalAlignment="Left" Margin="15,46,0,0" VerticalAlignment="Top" Width="75" Click="useDirectory_Click"/>

    </Grid>
</Window>
